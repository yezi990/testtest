#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_macaca-mocha-parallel-tests@2.2.6@macaca-mocha-parallel-tests/dist/bin/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../_macaca-mocha-parallel-tests@2.2.6@macaca-mocha-parallel-tests/dist/bin/cli.js" "$@"
  ret=$?
fi
exit $ret
